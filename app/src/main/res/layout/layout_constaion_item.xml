<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/chat_left_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="7dp"
        >
        <view.CircleImageView
            android:id="@+id/chat_left_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/head_img"
            app:border_color="#0000"/>
        <RelativeLayout
            android:id="@+id/chat_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@id/chat_left_img"
            android:background="@drawable/chat_from_bg_normal"
            >
            <TextView
                android:id="@+id/chat_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="HelloWorld"
                android:autoLink="email|phone"
                android:textColor="#fff"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/chat_left_text_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scaleType="centerCrop"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/chat_left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/chat_left_layout"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/chat_left_layout"
            android:text="2s"
            android:textSize="@dimen/third_text_size"
            android:textColor="@color/third_text_color"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chat_right_msg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        >
        <view.CircleImageView
            android:id="@+id/chat_right_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/head_img"
            app:border_color="#0000"/>
        <RelativeLayout
            android:id="@+id/chat_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_to_bg_normal"
            android:gravity="center"
            android:layout_toLeftOf="@id/chat_right_img">
            <TextView
                android:id="@+id/chat_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="hey!"
                android:textSize="16sp"
                android:textColor="@color/main_text_color"
                android:autoLink="email|phone"/>
            <ImageView
                android:id="@+id/chat_right_text_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scaleType="centerCrop"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/chat_right_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/chat_right_layout"
            android:layout_alignBottom="@id/chat_right_layout"
            android:text="2s"
            android:layout_marginBottom="4dp"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>