<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleActionStyle" parent="AppTheme">
        <item name="android:windowBackground">@color/main_fragment_background</item>
        <item name="colorPrimary">@color/main_style_color</item>
        <item name="colorPrimaryDark">@color/main_style_dark_color</item>
        <item name="colorAccent">@color/main_text_hint_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:listDivider">@drawable/chat_item_divider_shape</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTabTextStyle" parent="TextAppearance.Design.Tab">
        <!--Tab字体的大小-->
        <item name="android:textSize">@dimen/main_text_size</item>
        <!--Tab字体是否为大写-->
        <item name="textAllCaps">false</item>
    </style>
</resources>
